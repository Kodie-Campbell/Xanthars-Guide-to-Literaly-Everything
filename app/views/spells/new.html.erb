<div class-"container">
	<div class='row'>
		<h3 class="text-center">Add Spell</h3>
		<div class='col-md-4 col-md-offset-4'>
			<div class='well'>
				<%= form_for "/spells" do |f| %>
					<div class='form-group'>
						<%= f.label :name %>
						<%= f.text_field :name, class: 'form-control' %>
					</div>
					<div class='form-group'>
						<%= f.label :class %>
						<%= f.text_field :class, class: 'form-control' %>
					</div>
					<%= f.submit 'Submit' %>
				<% end %>
			</div>
		</div>
	</div>
</div>